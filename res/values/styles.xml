<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FeedYaTheme.Dark" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/Theme.FeedYaTheme.Dark.ActionBar</item>
        <item name="android:windowBackground">@color/background.dark</item>
        <item name="android:textColor">@color/background.light</item>
    </style>

    <style name="FeedYaTheme.Light" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.FeedYaTheme.Light.ActionBar</item>
        <item name="android:windowBackground">@color/background.light</item>
    </style>

    <style name="Theme.FeedYaTheme.Dark.ActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/background.dark</item>
        <item name="android:titleTextStyle">@style/Theme.FeedYaTheme.Light.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.FeedYaTheme.Light.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/background.light</item>
        <item name="android:titleTextStyle">@style/Theme.FeedYaTheme.Light.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.FeedYaTheme.Light.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Theme.FeedYaTheme.Light.Widget.Holo.Button" parent="android:style/Widget.Button">
        <item name="android:background">@color/home_button_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#797979</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>

    <style name="FeedYaTheme.Light.NoTitle" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@android:color/transparent</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="PageTitleStriperText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>